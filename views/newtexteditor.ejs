<link rel="stylesheet" href="/css/newtexteditstyle.css">

<div class="dark-mode">
    <span class="details hidden">switch to dark mode</span>
   <i class="fa-solid fa-sun hidden"></i>
   <i class="fa-solid fa-moon "></i>
</div>
<div class="sidebar">
    <div class = "close tab add-border">
        <button class = "close-btn"><i class="fa-solid fa-xmark fa-xl"></i> &nbsp; &nbsp; &nbsp;Close</button>
    </div>
    <div class="mygrammarly tab add-border">
        <button class = "my-grammarly"><i class="fa-solid fa-house"></i> &nbsp; &nbsp;My Grammarly</button>
    </div> 
    <div class="document tab add-border">
        <p>Document</p>
        <button class = "new-doc"><i class="fa-solid fa-plus"></i> &nbsp; &nbsp; New Document</button>
        <button class = "file-upload"><i class="fa-solid fa-upload"></i> &nbsp; &nbsp;
        Upload File</button>
        <button class = "file-download"><i class="fa-solid fa-download"></i> &nbsp; &nbsp;
        Download</button>
        <button class = "file-download"><i class="fa-solid fa-print"></i> &nbsp; &nbsp;
        Print</button>
    </div>
    <div class="edit-sec tab add-border">
        <p>Edit</p>
        <button class="undo"><i class="fa-solid fa-rotate-left"></i> &nbsp; &nbsp; Undo</button>
        <button class="redo"><i class="fa-solid fa-rotate-right"></i> &nbsp; &nbsp; Redo</button>
    </div>

    <div class="edit-sec-two tab add-border">
        <button class="cut"><i class="fa-solid fa-cut fa-rotate-270"></i> &nbsp; &nbsp; Cut</button>
        <button class="copy"><i class="fa-solid fa-copy "></i> &nbsp; &nbsp; Copy</button>
        <button class="paste"><i class="fa-solid fa-paste "></i> &nbsp; &nbsp; Paste</button>
        <button class="select"> &nbsp; &nbsp; &nbsp; &nbsp; Select all</button>
    </div>

    <div class="setting tab add-border">
        <button class="editor-settings"><i class="fa-solid fa-gear"></i> &nbsp; &nbsp; Editor settings</button>
    </div>
    <div class="edit-sec-two tab add-border">
        <button class="cut"> &nbsp; &nbsp; Upgrade to premium</button>
        <button class="copy"><i class="fa-solid fa-copy "></i> &nbsp; &nbsp; Copy</button>
        <button class="paste"><i class="fa-solid fa-paste "></i> &nbsp; &nbsp; Paste</button>
        <button class="select"> &nbsp; &nbsp; &nbsp; &nbsp; Select all</button>
    </div>
</div>
<div class="section">
    <div class="row">
        <div class="col">
            <div class="first box">
                <input type="number" id="font-size"min="1" max="100" value="16" onchange="f1(this)">
            </div>
            <div class="second box">
                <button type="button" class = "edit-btn" onclick="f2(this)">
                    <i class="fa-solid fa-bold"></i>
                </button>
                <button type="button" class = "edit-btn" onclick="f3(this)">
                    <i class="fa-solid fa-italic"></i>
                </button>
                <button type="button" class = "edit-btn" onclick="f4(this)">
                    <i class="fa-solid fa-underline"></i>
                </button>
            </div>
            <div class="third box">
                <button type="button"class = "edit-btn" onclick="f5(this)">
                    <i class="fa-solid fa-align-left"></i>
                </button>
                 <button type="button" class = "edit-btn" onclick="f6(this)">
                    <i class="fa-solid fa-align-center"></i>
                </button>
                 <button type="button" class = "edit-btn" onclick="f7(this)">
                    <i class="fa-solid fa-align-right"></i>
                </button>
            </div>
            <div class="fourth box">
                <button type="button" class = "edit-btn" onclick="f8(this)">aA
                </button>
                <button type="button" class = "edit-btn" onclick="f9(this)"><i class="fa-solid fa-text-slash"></i>
                </button>
                <input type="color" onchange="f10(this)">
            </div>
        </div>
        <br>
        <div class="col">
            <form action="/texteditor/save-document" method="post">
            <input type="text" name="title" id="doc-title" placeholder="Untitled Document">
            <grammarly-editor-plugin>
            <textarea name="document" id="textarea" placeholder="Write here..."></textarea>
            </grammarly-editor-plugin>
            <button type = "submit" id="btn-save">Save</button>
            </form>
        </div>
    </div>
    
<script src = "/js/newtextedit.js"></script>
<script src="https://unpkg.com/@grammarly/editor-sdk?clientId=client_N7kiYdtdh1ocS8RQSm8SA2"></script>